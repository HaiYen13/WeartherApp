<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lineImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgHis"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_clouds" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_toRightOf="@+id/lineImage"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocationHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="VietNam"/>
            <TextView
                android:id="@+id/tvDesHis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fog"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTempHis"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="20 C"/>
                <TextView
                    android:id="@+id/tvPresHis"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000hPa"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tvHumiHis"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000%"
                    android:textSize="20dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDateHis"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="00/00"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tvTimeHis"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>